<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- First CardView for Low-Carb Diet -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_low_carb"
                    android:layout_width="match_parent"
                    android:layout_height="204dp"
                    android:src="@drawable/low_carb"
                    android:layout_marginTop="40dp"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_low_carb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low-Carb Diet"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:layout_alignParentBottom="true"
                    android:padding="11dp"
                    android:background="#80000000"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <!-- Repeat similar CardView structure for each diet option -->
        <!-- Keto Diet -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_high_protein"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/high_protein"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_high_protein"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="High Protein Diet"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:layout_alignParentBottom="true"
                    android:padding="12dp"
                    android:background="#80000000"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_low_fat"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/fat_low"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/tv_lowfat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Low-Fat Diet"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:layout_alignParentBottom="true"
                    android:padding="12dp"
                    android:background="#80000000"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
