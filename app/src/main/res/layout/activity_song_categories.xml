        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:elevation="4dp"
            android:background="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- Song Icon -->
                <ImageView
                    android:id="@+id/song_icon1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/tum_hi_ho"
                    android:contentDescription="Song Icon1"
                    android:layout_marginEnd="18dp"
                    android:onClick="openLink" />

                <!-- Song Title and Description -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/song_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tum Hi Ho"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/song_description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Arijit Singh"
                        android:textSize="14sp"
                        android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <!-- Play Button -->
                <Button
                    android:id="@+id/btn_play_song1"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:text="Play"
                    android:textSize="12sp"
                    android:padding="4dp"
                    android:background="@android:color/black"
                android:textColor="@android:color/white"
                    />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

