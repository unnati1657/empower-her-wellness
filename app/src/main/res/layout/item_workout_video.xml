<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="@drawable/rounded_card_bg"
    android:elevation="6dp"
    android:gravity="center_vertical">

    <!-- Thumbnail Image (Rounded Corners) -->
    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:src="@drawable/new_bg"
        android:background="@drawable/rounded_thumbnail"
        android:elevation="4dp"/>

    <!-- Workout Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🔥 Full Body Workout"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingBottom="4dp"/>

        <TextView
            android:id="@+id/video_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="⏳ Duration: 20 mins"
            android:textSize="12sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Play Button (Better Styling) -->
    <ImageView
        android:id="@+id/btn_play_video"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/play_button"
        android:background="@drawable/rounded_button"
        android:padding="8dp"
        android:elevation="4dp"
        android:contentDescription="Play Video"/>
</LinearLayout>
