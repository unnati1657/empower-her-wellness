<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/mybg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Baby Growth Stages Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openBabyGrowthActivity"
            android:background="@drawable/rounded_bg"
            android:elevation="6dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/babygrowth"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baby Growth Stages"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Do's and Don'ts Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openDoDontsActivity"
            android:background="@drawable/rounded_bg"
            android:elevation="6dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/doanddonts"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Do's and Don'ts"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Regular Exercise Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:layout_marginBottom="60dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openExerciseActivity"
            android:background="@drawable/rounded_bg"
            android:elevation="6dp">

            <ImageView
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:src="@drawable/exercise"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exercises"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:paddingTop="8dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
