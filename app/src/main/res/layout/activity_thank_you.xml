<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybg"
    android:padding="16dp">

    <!-- Centering Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true">

        <!-- Thank You Message -->
        <TextView
            android:id="@+id/thankYouMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We appreciate your valuable feedback!"
            android:textSize="25sp"
            android:textColor="#6A3F86"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="10dp" />

        <!-- Subtext -->
        <TextView
            android:id="@+id/subtextMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your input helps us improve and create a better experience."
            android:textSize="20sp"
            android:textColor="#444444"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingHorizontal="20dp" />


    </LinearLayout>
</RelativeLayout>
