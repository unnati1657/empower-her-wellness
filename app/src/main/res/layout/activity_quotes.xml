<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F4F8"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Decorative Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quotes"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#3A3A3A"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="2dp"
            android:background="#FFA500"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Motivational Quotes Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motivational Quotes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <!-- Quote Card 1 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFF9C4"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/quote_text1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“The only way to do great work is to love what you do.”"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/quote_author1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Steve Jobs"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Quote Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#C8E6C9"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/quote_text2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Success is not final, failure is not fatal: It is the courage to continue that counts."
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/quote_author2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Winston Churchill"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Happiness Quotes Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Happiness Quotes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#4CAF50"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <!-- Quote Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFF9C4"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/quote_text3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“Happiness depends upon ourselves.”"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/quote_author3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Aristotle"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Quote Card 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#C8E6C9"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/quote_text4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“Do what you can, with what you have, where you are"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/quote_author4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Theodore Roosevelt"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Life Quotes Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Life Quotes"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#CA5F83"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="8dp" />

        <!-- Quote Card 5 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFF9C4"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/quote_text5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“Life is what happens when you're busy making other plans.”"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/quote_author5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- John Lennon"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Quote Card 6 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#C8E6C9"
            app:cardCornerRadius="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/quote_text6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="“In the middle of every difficulty lies opportunity”"
                    android:textSize="20sp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#4A4A4A"
                    android:gravity="center"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/quote_author6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="- Albert Einstein"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#555555"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>
</ScrollView>
